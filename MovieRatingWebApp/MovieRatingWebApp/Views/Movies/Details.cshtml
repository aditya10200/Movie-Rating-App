@model MovieRatingWebApp.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-danger text-center">
    @Model.Title
    (
    <span>
        @Model.ReleaseYear
    </span>
    )
</h2>

<div class="row">
    <div class="col-sm-5 prom">
        <img src="@Url.Content(@Model.PosterImage)" alt="Thumbnail" class="img-responsive img-full-width" />
    </div>
    <div class="col-sm-7 scene">
        <img src="@Url.Content(@Model.SceneImage)" alt="Thumbnail" class="img-responsive img-full-width" />
    </div>
</div>
<div class="row mt-3">
    <div class="col text-left p">
        <ul class="list-group text-primary">
            <li class="list-group-item ">
                <b class="text-muted">Genre: </b>
                <span class="mr-1">
                    @Html.DisplayNameFor(model => model.Genre.Name)
                </span>
            </li>
            <li class="list-group-item ">
                <b class="text-muted">Actors: </b>
                @foreach (var item in Model.MovieActors)
                {
                    <span class="mr-1">
                        @Html.DisplayFor(modelItem => item.Actor.Name)
                    </span>
                }
            </li>
            <li class="list-group-item">
                <b class="text-muted">Stars: </b>
                @foreach (var item in Model.MovieActors)
                {
                    <span class="mr-1">
                        @Html.DisplayFor(modelItem => item.Actor.Name)
                    </span>
                }
            </li>
        </ul>
 
        <div class="text-center" style="margin: auto;">
            <h4 class="text-muted mt">Current Rating</h4>
            @await Html.PartialAsync("_RatingPartial", @Model)
            <div>

            </div>
        </div>

<div sstyle="text-align: right;">
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
